<?xml version="1.0" encoding="UTF-8"?>
<suppressions xmlns="https://jeremylong.github.io/DependencyCheck/dependency-suppression.1.3.xsd">
    <!-- 
    Suppress known false positives and accepted vulnerabilities
    Use CVE identifiers when suppressing specific vulnerabilities
    -->
    
    <!-- Android Support Library false positives -->
    <suppress>
        <notes><![CDATA[
            Android Support Library components are maintained by Google
            and security updates are handled through the Android SDK
        ]]></notes>
        <gav regex="true">^androidx\..*:.*:.*$</gav>
        <cve>CVE-2018-9492</cve>
        <cve>CVE-2018-9493</cve>
    </suppress>
    
    <!-- Kotlin standard library -->
    <suppress>
        <notes><![CDATA[
            Kotlin standard library is maintained by JetBrains
            and is regularly updated with security patches
        ]]></notes>
        <gav regex="true">^org\.jetbrains\.kotlin:.*:.*$</gav>
        <cve>CVE-2020-15824</cve>
    </suppress>
    
    <!-- ExoPlayer - Media playback library -->
    <suppress>
        <notes><![CDATA[
            ExoPlayer is actively maintained by Google
            Known issues are related to media parsing which are acceptable for our use case
        ]]></notes>
        <gav regex="true">^com\.google\.android\.exoplayer:.*:.*$</gav>
        <cve>CVE-2021-22570</cve>
    </suppress>
    
    <!-- Hilt dependency injection -->
    <suppress>
        <notes><![CDATA[
            Hilt is maintained by Google as part of Android Jetpack
            Security updates are provided through regular releases
        ]]></notes>
        <gav regex="true">^com\.google\.dagger:hilt-.*:.*$</gav>
    </suppress>
    
    <!-- Room database -->
    <suppress>
        <notes><![CDATA[
            Room is part of Android Architecture Components
            maintained by Google with regular security updates
        ]]></notes>
        <gav regex="true">^androidx\.room:.*:.*$</gav>
    </suppress>
    
    <!-- SMBJ library for SMB connections -->
    <suppress>
        <notes><![CDATA[
            SMBJ is a well-maintained SMB client library
            Used for network file access in controlled environments
        ]]></notes>
        <gav regex="true">^com\.hierynomus:smbj:.*$</gav>
    </suppress>
    
    <!-- Test dependencies -->
    <suppress>
        <notes><![CDATA[
            Test dependencies are not included in production builds
            Security vulnerabilities in test code do not affect end users
        ]]></notes>
        <gav regex="true">^junit:junit:.*$</gav>
        <gav regex="true">^org\.mockito:.*:.*$</gav>
        <gav regex="true">^org\.robolectric:.*:.*$</gav>
        <gav regex="true">^androidx\.test:.*:.*$</gav>
        <gav regex="true">^androidx\.test\.ext:.*:.*$</gav>
        <gav regex="true">^androidx\.test\.espresso:.*:.*$</gav>
    </suppress>
    
    <!-- Development tools -->
    <suppress>
        <notes><![CDATA[
            Development and build tools are not included in production
            These are only used during development and building
        ]]></notes>
        <gav regex="true">^com\.android\.tools\.build:gradle:.*$</gav>
        <gav regex="true">^org\.jetbrains\.kotlin:kotlin-gradle-plugin:.*$</gav>
    </suppress>
    
    <!-- Compose UI framework -->
    <suppress>
        <notes><![CDATA[
            Jetpack Compose is maintained by Google
            UI-related vulnerabilities are typically less critical for media apps
        ]]></notes>
        <gav regex="true">^androidx\.compose:.*:.*$</gav>
    </suppress>
    
    <!-- Coroutines -->
    <suppress>
        <notes><![CDATA[
            Kotlin Coroutines library is maintained by JetBrains
            Concurrency-related issues are monitored and patched regularly
        ]]></notes>
        <gav regex="true">^org\.jetbrains\.kotlinx:kotlinx-coroutines-.*:.*$</gav>
    </suppress>
    
    <!-- DataStore preferences -->
    <suppress>
        <notes><![CDATA[
            DataStore is part of Android Jetpack
            Used for local preference storage with encrypted data
        ]]></notes>
        <gav regex="true">^androidx\.datastore:.*:.*$</gav>
    </suppress>
    
    <!-- Image loading library -->
    <suppress>
        <notes><![CDATA[
            Coil is a well-maintained image loading library for Android
            Used only for local image display and caching
        ]]></notes>
        <gav regex="true">^io\.coil-kt:.*:.*$</gav>
    </suppress>
    
    <!-- Suppress vulnerabilities with CVSS score below threshold for non-critical dependencies -->
    <suppress base="true">
        <notes><![CDATA[
            Low-severity vulnerabilities in non-critical dependencies
            These do not pose significant risk to the application
        ]]></notes>
        <cvssBelow>4.0</cvssBelow>
    </suppress>
    
    <!-- Suppress vulnerabilities in dependencies that are not directly accessible -->
    <suppress>
        <notes><![CDATA[
            Transitive dependencies that are not directly exposed
            or accessible through the application's attack surface
        ]]></notes>
        <gav regex="true">^.*:.*-internal:.*$</gav>
    </suppress>
</suppressions>